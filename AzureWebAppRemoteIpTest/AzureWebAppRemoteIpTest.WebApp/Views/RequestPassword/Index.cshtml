@model RequestPasswordViewModel

<div class="row justify-content-center">
    <div class="col-xs-12 col-md-8 col-lg-6">
        <form method="post" asp-controller="RequestPassword" asp-action="RequestPassword">
            <div class="h1 mb-4 mt-6 border-bottom">Récupération de mot de passe</div>
            <div class="form-group">
                <label class="label">E-Mail</label>
                <div class="input-group">
                    <input type="email" class="form-control" placeholder="E-Mail" autofocus asp-for="Email" />
                    <div class="input-group-append">
                        <span class="input-group-text">
                            <i class="mdi mdi-check-circle-outline"></i>
                        </span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-primary submit-btn btn-block" type="submit">Récupérer le mot de passe</button>
            </div>
            <div class="form-group">
                <a class="text-small text-black" asp-controller="Home" asp-action="Index">Retourner à l'index</a>
            </div>
            <div asp-validation-summary="All" class="alert alert-danger"></div>
        </form>
    </div>
</div>